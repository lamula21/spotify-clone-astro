---
import Layout from "@/layouts/Layout.astro";
import { playlists } from "@/lib/data";
import PlayListItemCard from "@/components/PlayListItemCard.astro";
---

<Layout title="Welcome to Spotify Clone">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-600 h-full"
  >
    <!-- PageHeader -->

    <div class="relative z-10 px-6 pt-4">
      <!-- Greetings -->
      <h1 class="text-4xl font-bold">Good Morning</h1>

      <div class="flex flex-wrap mt-6 gap-4">
        {playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)}
      </div>
    </div>

    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/95"
    >
    </div>
  </div>
</Layout>

